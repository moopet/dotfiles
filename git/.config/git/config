[alias]
	arrange = rebase -i develop
  history = log --graph --pretty --abbrev-commit --date=human
	graph = log --graph --oneline --decorate --all
  incorporates = !git branch -r --merged | grep -q $1 && echo Incorporates $1 || echo Out of date from $1 && :
  pushup = "!git push --set-upstream origin $(git symbolic-ref --short HEAD)"
	recent = branch --sort=-committerdate
  recommit = commit --amend --no-edit
  taglog = log --tags --simplify-by-decoration --pretty='format:%ci %d'
  track = "!git branch --set-upstream-to origin/$(git symbolic-ref --short HEAD)"
  uncommit = reset --soft HEAD~1
  unstage = reset HEAD --
  dd = diff --name-only develop

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
	ui = true

[color "diff"]
	commit = yellow bold
	frag = magenta bold
	meta = 11
	new = green bold
	old = red bold
	whitespace = red reverse

[color "diff-highlight"]
	newHighlight = green bold 22
	newNormal = green bold
	oldHighlight = red bold 52
	oldNormal = red bold

[core]
  autocrlf = input
	editor = nvim
  filemode = false
  ignorecase = false
  pager = delta

[delta]
  features = side-by-side line-numbers decorations
  line-numbers = true
  line-numbers-left-format = ""
  line-numbers-right-format = "â”‚ "
  navigate = true
  side-by-side = true
  syntax-theme = Nord

[diff]
  renameLimit = 2000
  tool = vimdiff

[difftool]
  prompt = false

[format]
  pretty = "%C(yellow)%h%Creset %C(blue)%cd%Creset%C(red)%d%Creset %s %C(blue)<%C(bold blue)%an%Creset%C(blue)>%Creset"

[init]
	templatedir = ~/.git_template

[interactive]
  diffFilter = delta --color-only

[log]
	date = short

[merge]
  conflictStyle = diff3
  tool = vimdiff

[pager]
  branch = less -sRXF
  log = less -sRXF
  show = less --tabs=1,5 -RFX

[push]
	default = current

