[core]
  editor = vim -f
  autocrlf = input
  filemode = false
  ignorecase = false

[user]
  name = Ben Sinclair
  email = ben@moopet.net

[format]
  pretty = "%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset"

[diff]
  tool = vimdiff
  renameLimit = 2000

[difftool]
  prompt = false

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[pager]
  diff = diff-so-fancy | less -sRXF
  show = diff-so-fancy | less -sRXF
  log = less -sRXF
  branch = less -sRXF

[alias]
  oops = reset --soft HEAD~1
  unstage = reset HEAD --
  taglog = log --tags --simplify-by-decoration --pretty='format:%ci %d'
	ctags = !.git/hooks/ctags

[diff-so-fancy]
  changeHunkIndicators = true
  markEmptyLines = true
	stripLeadingSymbols = true
  useUnicodeRuler = true

[init]
	templatedir = ~/.git_template
